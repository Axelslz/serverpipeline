pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'node-hello-world'
        NPM_CACHE = '/var/lib/jenkins/.npm'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image(DOCKER_IMAGE).inside("-v ${NPM_CACHE}:/home/node/.npm") {
                        sh 'npm install'
                        sh 'npm test'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.image(DOCKER_IMAGE).run('-d -p 3000:3000')
                }
            }
        }
    }
}
